{
  "permissions": {
    "allow": [
      "Bash(chmod:*)",
      "WebFetch(domain:code.claude.com)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch",
      "Read(**)",
      "Write(**)",
      "Edit(**)",
      "Glob(**)",
      "Grep",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git rev-parse:*)",
      "Bash(git remote:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git reset:*)",
      "Bash(git stash:*)",
      "Bash(npm test:*)",
      "Bash(npm run test:*)",
      "Bash(npm run build:*)",
      "Bash(npm run lint:*)",
      "Bash(npm install:*)",
      "Bash(npm ci:*)",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Bash(python -m unittest:*)",
      "Bash(cargo test:*)",
      "Bash(cargo build:*)",
      "Bash(cargo check:*)",
      "Bash(cargo run:*)",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(go run:*)",
      "Bash(make test:*)",
      "Bash(make build:*)",
      "Bash(make:*)",
      "Bash(mvn test:*)",
      "Bash(gradle test:*)",
      "Bash(jest:*)",
      "Bash(vitest:*)",
      "Bash(mocha:*)",
      "Bash(brew install:*)",
      "Bash(plantuml:*)",
      "Bash(bash:*)",
      "Bash(sh:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(node:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(find:*)",
      "Bash(which:*)",
      "Bash(test:*)",
      "Bash([:*)"
    ],
    "deny": [],
    "ask": [
      "Bash(git push:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Output JSON with your token usage: {\"decision\": \"approve\", \"usedTokens\": X, \"maxTokens\": Y, \"remainingTokens\": Z} using your actual current numbers"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh"
  },
  "alwaysThinkingEnabled": true
}
